<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_335"
        android:layout_height="@dimen/dp_120"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        app:cardCornerRadius="@dimen/dp_10">
        
        <RelativeLayout
            android:layout_width="@dimen/dp_335"
            android:layout_height="@dimen/dp_120">
            <ImageView
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_120"
                android:scaleType="center"
                android:id="@+id/trips_img"
                android:src="@mipmap/ic_launcher"/>
            
            <TextView
                android:id="@+id/trips_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trips_name"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/c_333333"
                android:layout_marginLeft="@dimen/dp_137"
                android:layout_marginTop="@dimen/dp_17"/>
            
            <TextView
                android:id="@+id/guanzhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guanzhu"
                android:textColor="@color/c_999"
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="@dimen/dp_137"
                android:layout_marginTop="@dimen/dp_42"/>

            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_12"
                android:src="@mipmap/wei"
                android:layout_marginLeft="@dimen/dp_139"
                android:layout_marginTop="@dimen/dp_71"
                />
            
            <TextView
                android:id="@+id/trips_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trips_address"
                android:textColor="@color/c_999"
                android:textSize="@dimen/sp_10"
                android:layout_marginLeft="@dimen/dp_156"
                android:layout_marginTop="@dimen/dp_69"
                />
            
            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_7"
                android:src="@mipmap/shu"
                android:layout_marginLeft="@dimen/dp_139"
                android:layout_marginTop="@dimen/dp_95"/>
            
            <TextView
                android:id="@+id/trips_autor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trips_autor"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_999"
                android:layout_marginLeft="@dimen/dp_155"
                android:layout_marginTop="@dimen/dp_90"/>
            
            <ImageView
                android:id="@+id/trips_scolloc"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_305"
                android:layout_marginTop="@dimen/dp_18"
                android:src="@mipmap/follow_unselected"/>
        </RelativeLayout>
        
    </android.support.v7.widget.CardView>

</RelativeLayout>
