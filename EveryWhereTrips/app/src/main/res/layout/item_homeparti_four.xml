<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_homeparti_four_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看所有评论"
        android:layout_marginLeft="@dimen/dp_135"
        android:textColor="@color/c_fa6a13"
        android:textSize="@dimen/sp_15"/>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_50"
        android:layout_below="@id/item_homeparti_four_tv1"
        android:id="@+id/item_homeparti_four_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_145"
        android:background="@drawable/home_part_four_kuang"
        >
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/item_homeparti_four_img"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:src="@mipmap/collect_default"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"/>
        <TextView
            android:layout_gravity="center"
            android:id="@+id/item_homeparti_four_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/collect"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"/>
    </LinearLayout>


</RelativeLayout>