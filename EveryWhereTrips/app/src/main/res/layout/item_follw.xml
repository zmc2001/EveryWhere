<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_335"
        android:layout_height="@dimen/dp_120"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        app:cardCornerRadius="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="@dimen/dp_335"
            android:layout_height="@dimen/dp_120">
            <ImageView
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_120"
                android:scaleType="center"
                android:id="@+id/tripsfollw_img"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/tripsfollw_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trips_name"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/c_333333"
                android:layout_marginLeft="@dimen/dp_137"
                android:layout_marginTop="@dimen/dp_17"/>

            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_7"
                android:src="@mipmap/shu"
                android:layout_marginLeft="@dimen/dp_139"
                android:layout_marginTop="@dimen/dp_50"/>

            <TextView
                android:id="@+id/tripsfollw_autor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trips_autor"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_999"
                android:layout_marginLeft="@dimen/dp_155"
                android:layout_marginTop="@dimen/dp_45"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>