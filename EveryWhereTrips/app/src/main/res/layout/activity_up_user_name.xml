<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.activity.UpUserNameActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:id="@+id/upname_tb"
        android:background="@color/c_ffffff">
        <ImageView
            android:id="@+id/update_name_back"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:src="@drawable/back_white"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_14"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/up_name"
            android:textSize="@dimen/dp_16"
            android:textColor="@color/c_333333"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/upname_tb_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:textColor="@color/c_fa6a13"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_10"/>

    </android.support.v7.widget.Toolbar>

    <View
        android:background="@drawable/gra_white_de"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"/>


    <RelativeLayout
        android:layout_width="@dimen/dp_355"
        android:layout_height="@dimen/dp_130"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10">
        <EditText
            android:id="@+id/upname_et"
            android:layout_width="@dimen/dp_355"
            android:layout_height="@dimen/dp_50"
            android:maxLength="15"
            android:textColor="@color/c_999"
            android:saveEnabled="true"
            android:background="@drawable/edittext_kuang"/>
        <TextView
            android:id="@+id/upname_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/c_999"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_20"/>
    </RelativeLayout>


</LinearLayout>