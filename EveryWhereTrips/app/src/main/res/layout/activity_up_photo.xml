<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/upphote_ll"
    tools:context=".ui.main.activity.UpPhotoActivity">
    
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:id="@+id/upphoto_tb"
        android:background="@color/c_ffffff">
        <ImageView
            android:id="@+id/update_photo_back"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:src="@drawable/back_white"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_14"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_headphoto"
            android:textSize="@dimen/dp_16"
            android:textColor="@color/c_333333"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/upphote_tb_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/diandiandian"
            android:layout_gravity="right"/>

    </android.support.v7.widget.Toolbar>

    <View
        android:background="@drawable/gra_white_de"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"/>

    <ImageView
        android:id="@+id/upphoto_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_launcher"/>

</LinearLayout>